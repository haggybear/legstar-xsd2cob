<!--
Assembly descriptor for the full distribution.
-->
<assembly>
    <id></id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>

    <fileSets>
        <!-- Copy configuration files (log4j) -->
        <fileSet>
            <directory>src/main/resources/conf</directory>
            <outputDirectory>conf</outputDirectory>
            <includes>
                <include>*.properties</include>
            </includes>
        </fileSet>

        <!-- Copy the documentation -->
        <fileSet>
            <directory>.</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>readme.txt</include>
                <include>license.txt</include>
            </includes>
        </fileSet>
        
        <!-- Copy over the executable jar -->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*-exe.jar</include>
            </includes>
        </fileSet>
    </fileSets>
    
    <files>
        <!-- Copy command files to run executable jar -->
        <file>
            <source>run.bat</source>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>run.sh</source>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </file>
    </files>

    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <scope>runtime</scope>
            <excludes>
                <exclude>org.codehaus.jackson:*</exclude>
            </excludes>
        </dependencySet>
     </dependencySets>
</assembly>
